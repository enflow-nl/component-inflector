{
    "name": "enflow/component-inflector",
    "description": "Multilingual inflector that can singularize and pluralize words.",
    "keywords": [
        "enflow",
        "inflector",
        "singularize",
        "pluralize",
        "multilingual"
    ],
    "homepage": "https://github.com/enflow-nl/component-inflector",
    "license": "MIT",
    "authors": [
        {
            "name": "Michel Bardelmeijer",
            "email": "michel@enflow.nl"
        }
    ],
    "require": {
        "php": "^7.2.5"
    },
    "require-dev": {
        "phpunit/phpunit": "~8.1"
    },
    "autoload": {
        "psr-4": {
            "Enflow\\Component\\Inflector\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Enflow\\Component\\Inflector\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
